<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:text="@string/airport_luggage_transfers"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/text_size_12"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please enter the following information to request a call back from Airportr"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/button_white_stroke"
                        android:gravity="center|start"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_8" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_weight="1"

                        android:background="@drawable/button_white_stroke"
                        android:gravity="center|start"
                        android:padding="@dimen/dp_5"
                        android:text="@string/date_of_travel"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_8" />

                    <TextView
                        android:id="@+id/tvBagNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_white_stroke"
                        android:gravity="center|start"
                        android:padding="@dimen/dp_5"
                        android:text="@string/number_of_bags"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_8" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/button_white_stroke"
                    android:gravity="center|start"
                    android:hint="Pick up location"

                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_8" />

                <TextView
                    android:id="@+id/tvSelectDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/button_white_stroke"
                    android:gravity="center|start"
                    android:hint="@string/select_delivery_airport"
                    android:padding="@dimen/dp_5"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_8" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_white_stroke"
                        android:gravity="center|start"
                        android:hint="@string/telephone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/dp_5"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_8" />

                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:background="@drawable/button_white_stroke"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:hint="Select Preferred Call Back Time"
                            android:textColorHint="@color/white"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>
                   <!-- <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please allow 24 hours between submitting your request and collection of luggage from the apartment"
                        android:textSize="@dimen/text_size_8"/>-->
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_1"
                    android:text="Please allow 24 hours between submitting your request and collection of luggage from the apartment"
                    android:textSize="@dimen/text_size_8"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_2" >

        <CheckBox
            android:id="@+id/cbTermsConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:button="@null"
            android:background="@null"
            android:drawableLeft="@drawable/checkbox"
            android:drawablePadding="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/by_ticking_this_box_you_agree_to_our_terms_amp_conditions_and_privacy_policy"
            android:textSize="@dimen/text_size_6"
            android:textColor="@android:color/white"
            android:checked="false"
            />
        <TextView
            android:id="@+id/tvTermsCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:paddingStart="@dimen/dp_2"
            android:textSize="@dimen/text_size_6"
            android:text="@string/terms_amp_conditions_and_privacy_policy"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_10">

        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:button="@null"
            android:background="@null"
            android:drawableLeft="@drawable/checkbox"
            android:drawablePadding="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/by_ticking_this_box_you_agree_to_our_terms_conditions_and_privacy_policy"
            android:textSize="@dimen/text_size_6"
            android:textColor="@android:color/white"
            android:checked="false"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:paddingStart="@dimen/dp_2"
            android:visibility="gone"
            android:textSize="@dimen/text_size_6"
            android:text="you agree to receive a call back from Airportr"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/button_background_pink"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold" />

</LinearLayout>