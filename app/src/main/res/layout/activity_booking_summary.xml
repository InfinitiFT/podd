
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_taxi_booking_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.podd.activityTaxi.TaxiBookingSummaryActivity"
    tools:ignore="Overdraw">


    <!--<include layout="@layout/toolbar" />-->
    <TextView
        android:id="@+id/tvBookTaxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/booking_summary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@android:color/white" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="@string/restaraunt_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLocationLeft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/location_"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/colon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDateBookedLeft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/date_booked_"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="@string/colon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvDateBooked"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTimeBookedLeft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/time_booked_"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/colon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTimeBooked"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNoOfPeopleLeft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/number_of_people_"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="@string/colon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvNumberofPeople"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/confirmation_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/button_white_stroke"
                    android:gravity="center"
                    android:hint="@string/name"
                    android:textColorHint="@android:color/white"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:padding="@dimen/dp_6"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:background="@drawable/button_white_stroke">


                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/Mobile"
                        android:textColorHint="@android:color/white"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:maxLines="1"

                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_12" />

                    <Spinner
                        android:id="@+id/spCountryCode"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"

                        android:spinnerMode="dropdown"
                        android:textColor="@android:color/black" />

                </FrameLayout>


                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/button_white_stroke"
                    android:gravity="center"
                    android:hint="@string/email"
                    android:textColorHint="@android:color/white"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/dp_6"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/button_white_stroke"
                    android:gravity="center"
                    android:hint="@string/address"
                    android:textColorHint="@android:color/white"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="2"
                    android:padding="@dimen/dp_6"
                    android:text=""
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvCompleteBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/button_background_pink"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="@string/complete_booking"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold" />


</LinearLayout>