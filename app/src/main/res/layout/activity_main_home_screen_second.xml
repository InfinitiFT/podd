<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_home_screen_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.podd.activityRestaurant.MainHomeScreenSecondActivity"
    tools:ignore="Overdraw">


    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/llInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">


        <TextView
            android:id="@+id/tvDiscoverRestaurantsBars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discover_Restaurants"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12"
            android:padding="@dimen/dp_8"
            android:gravity="center"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvRestaurantsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fadingEdge="none"
                android:orientation="horizontal"
                android:scrollbars="none" />

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@android:color/white" />


        <TextView
            android:id="@+id/tvViewAndBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/viewAndBookrestaurants"
            android:padding="@dimen/dp_4"
            android:textSize="@dimen/text_size_10"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
