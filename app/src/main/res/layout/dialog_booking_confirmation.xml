<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    android:background="@drawable/rounded_corners_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvEnterYourEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/dp_8"
        android:text="@string/please_enter_otp_to_confirm_booking"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12" />
    <EditText
        android:id="@+id/etEnterOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:hint="@string/otp"
        android:maxLength="6"
        android:maxLines="1"
        android:background="@null"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColorHint="@color/text_color_grey"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12" />




    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/text_color_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_4"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background_pink"
            android:padding="@dimen/dp_6"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tvResendOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Resend"
            android:layout_marginLeft="@dimen/dp_4"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background_pink"
            android:padding="@dimen/dp_6"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>