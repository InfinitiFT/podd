<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_60"
    android:layout_marginRight="@dimen/dp_60"
    android:background="@drawable/rounded_corners_background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tvEnterYourEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/dp_8"
        android:text="@string/please_enter_otp_to_confirm_booking"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/dp_8">
    <EditText
        android:id="@+id/etEnterOtp1"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:gravity="center"
        android:maxLength="1"
        android:clickable="false"
        android:background="@mipmap/circle"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etEnterOtp2"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:gravity="center"
        android:maxLength="1"
        android:clickable="false"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/circle"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etEnterOtp3"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"  android:gravity="center"
        android:maxLength="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="false"
        android:background="@mipmap/circle"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etEnterOtp4"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:gravity="center"
        android:maxLength="1"
        android:clickable="false"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_white_circle"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12"
        tools:ignore="LabelFor" />

    </LinearLayout>


    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/text_color_grey"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvResendOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Resend"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginStart="0dp"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_white_stroke"
            android:padding="@dimen/dp_6"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginStart="0dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_white_stroke"
            android:padding="@dimen/dp_6"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>