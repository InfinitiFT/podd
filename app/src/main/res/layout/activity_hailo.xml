<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSourceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:imeOptions="actionNext"
                android:background="@drawable/button_background"
                android:hint="Pick me up from"
                android:textColorHint="@color/black"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textSize="@dimen/text_size_12" />
            <TextView
                android:id="@+id/tvEndAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:imeOptions="actionNext"
                android:background="@drawable/button_background"
                android:hint="Take me to"
                android:textColorHint="@color/black"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textSize="@dimen/text_size_12" />
            <TextView
                android:id="@+id/tvEta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@android:color/white"
                android:text="Estimated Time of Arrival for cabs near to a location"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/dp_12"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnGetEta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get ETA"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@color/colorAccent"/>
    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@color/colorAccent"/>
</LinearLayout>