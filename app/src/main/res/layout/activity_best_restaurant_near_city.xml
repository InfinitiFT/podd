<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_best_Restaurant_near_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.podd.activityRestaurant.BestRestaurantNearCity"
    tools:ignore="Overdraw">

  <!--  <include layout="@layout/toolbar" />-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llVenues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvShowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showing"
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/tvNoOfRestaurants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"/>

                <TextView
                    android:id="@+id/tvVenueBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/venues_by"
                    android:padding="@dimen/dp_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"/>

                <TextView
                    android:id="@+id/tvLocationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dp_1"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:focusable="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    tools:ignore="Deprecated" />
            </LinearLayout>
            <!--<View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_height="@dimen/dp_1"
                android:background="@android:color/white" />-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvRestaurants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fadingEdge="none"
                    android:orientation="horizontal"
                    android:scrollbars="none" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@android:color/white" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvSearchBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    android:text="@string/search_by"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_2">

                    <LinearLayout
                        android:id="@+id/llLocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/location"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/tvLocationType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDietary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvDietary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/Dietary"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/tvDietaryType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCuisine"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvCuisine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/cuisine"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/tvCuisineType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llMeal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvMeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/meal"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/tvMealType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAmbience"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_weight="1"

                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvAmbience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/ambience"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/tvBusiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDeliveredToYou"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/rectangle_white_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/tvDeliveredToYou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/delivered"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
